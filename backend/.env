# ============================================================
# VARIABLES GLOBALES DEL PROYECTO FASTAPI + MYSQL + DOCKER
# ------------------------------------------------------------
# Este archivo se comparte entre los servicios:
#   - db (MySQL)
#   - app (FastAPI)
# Docker Compose inyecta estas variables automáticamente
# ============================================================


# ============================================================
# SECCIÓN: CONFIGURACIÓN DE LA BASE DE DATOS MYSQL
# ============================================================

MYSQL_ROOT_PASSWORD=root       # Contraseña del usuario root
MYSQL_DATABASE=lara_bs         # Nombre de la base de datos inicial
MYSQL_USER=daniel              # Usuario no-root de la base de datos
MYSQL_PASSWORD=daniel123       # Contraseña del usuario anterior
MYSQL_PORT=3306                # Puerto interno de MySQL en el contenedor


# ============================================================
# SECCIÓN: CONFIGURACIÓN DEL BACKEND FASTAPI
# ============================================================

APP_ENV=development            # Entorno de ejecución
APP_DEBUG=True                 # Activa el modo debug (solo desarrollo)

# Credenciales del backend para conectarse a MySQL
DB_USER=${MYSQL_USER}          # Se reutilizan las variables anteriores
DB_PASSWORD=${MYSQL_PASSWORD}
DB_HOST=db                     # El nombre del servicio definido en docker-compose.yml
DB_PORT=${MYSQL_PORT}
DB_NAME=${MYSQL_DATABASE}

# URL de conexión que usará SQLAlchemy o PyMySQL en el backend
DATABASE_URL=mysql+pymysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Configuración de ejecución del servidor FastAPI
APP_HOST=0.0.0.0
APP_PORT=8000
