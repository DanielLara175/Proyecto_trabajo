# ==== ETAPA 1: BUILD DEL FRONTEND ====
FROM node:20 AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

# 游릭 Construye Angular para producci칩n
RUN npm run build --prod


# ==== ETAPA 2: SERVIDOR NGINX PARA PRODUCCI칍N ====
FROM nginx:alpine

# 游릭 Copia el build generado
COPY --from=build /app/dist/sena-frontend /usr/share/nginx/html

# 游릭 Copia la config de nginx para que soporte rutas (SPA)
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
